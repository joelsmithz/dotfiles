#if __has_include(".extend.Xresources")
#include ".extend.Xresources"
#endif

#define fg #2662ED
#define bg #222222
#define trans 30
#define argb_bg argb:CC222222

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

XTerm*background: #2b2b2b
XTerm*foreground: #e7e7e7
XTerm*pointerColor: #16A085
XTerm*faceName: Fixed
XTerm*faceSize: 10

Section "InputDevice"
	Option "Sensitivity" "0.30"
EndSection

! Rofi solid blue/greyish theme
!rofi.color-normal:    argb:31d1f21, #c4cbd4, argb:96404552, #4084d6, #f9f9f9
!rofi.color-urgent:    argb:2c1d1f21, #cc6666, argb:e54b5160, #a54242, #f9f9f9
!rofi.color-active:    argb:2c1d1f21, #65acff, argb:e44b5160, #4491ed, #f9f9f9
!rofi.color-window:    argb:f22d303b, #7c8389, #1d1f21
!rofi.separator-style: solid

! Rofi transparent dark, blue theme
rofi.color-enabled: true
rofi.color-window: argb_bg, argb:0000000, argb:0000000
rofi.color-normal: argb:00000000, fg, argb:00000000, fg, bg
rofi.color-active: argb:00000000, #0ea1f0, bg, #0ea1f0, bg
rofi.color-urgent: #fdf6e3, #dc322f, #eee8d5, #dc322f, #fdf6e3
